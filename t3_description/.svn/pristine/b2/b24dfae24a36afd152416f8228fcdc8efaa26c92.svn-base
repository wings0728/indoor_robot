################################################################################
cmake_minimum_required(VERSION 2.8.3)
project(t3_description)

################################################################################
# Packages
################################################################################
find_package(catkin REQUIRED COMPONENTS
#  urdf
#  xacro
  roscpp
  rospy
  std_msgs
  message_generation
)

################################################################################
# Declare ROS messages, services and actions
################################################################################
 add_message_files(
   FILES
   goal.msg
   goals.msg
 )

 generate_messages(
   DEPENDENCIES
   std_msgs
 )
################################################################################
# Declare ROS dynamic reconfigure parameters
################################################################################

